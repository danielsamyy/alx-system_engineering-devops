#!/usr/bin/env bash
# script that transfers a file from our client to a server

if [[ "$#" -lt 4 ]]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

path_to_file=$1
ip=$2
user_name=$3
path_to_ssh_key=$4

scp -i "$path_to_ssh_key" -o StrictHostKeyChecking=no "$path_to_file" "$user_name"@"$ip":~/
